<div class="my-schedules-container">
  <h1 class="my-schedules-title">Meus Agendamentos</h1>
  {{#if schedules.length}}
    <table class="my-schedules-table">
      <thead>
        <tr>
          <th>Horário</th>
          <th>Data do Agendamento</th>
          <th>Ponto de Coleta</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#each schedules}}
          <tr>
            <td class="align-middle">{{timeScheduled}}</td>
            <td class="align-middle">{{formatDate dateScheduled}}</td>
            <td class="align-middle">
              <div class="my-schedules-row">
                <div>{{collectionPoint.name}}</div>
                <div>-</div>
                <div>{{collectionPoint.address}}</div>
              </div>
            </td>
            <td class="align-middle my-schedules-actions">
              <form action="/cancel-schedule/{{id}}" method="POST" style="display:inline;">
                <input type="submit" value="Cancelar" />
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    {{else}}
      <p>Nenhum agendamento encontrado.</p>
    {{/if}}
  </div>
</div>